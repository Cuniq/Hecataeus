SELECT d.tid, d.name, MAX(n.created) AS updated, COUNT(*) AS count FROM {term_data} d INNER JOIN {term_node} USING (tid) INNER JOIN {node} n USING (nid) WHERE n.status = 1 GROUP BY d.tid, d.name ORDER BY updated DESC, d.name;
SELECT tid FROM {term_data} WHERE vid = %d;
SELECT * FROM {vocabulary} WHERE nodes = '%s' or nodes LIKE '%s,%%' or nodes LIKE '%%,%s,%%' or nodes LIKE '%%,%s' ORDER BY weight, name;
SELECT * FROM {vocabulary} ORDER BY weight, name;
SELECT * FROM {vocabulary} WHERE nodes = '%s' or nodes LIKE '%s,%%' or nodes LIKE '%%,%s,%%' or nodes LIKE '%%,%s' ORDER BY weight, name;
SELECT name FROM {term_data} WHERE tid = %d;
SELECT COUNT(n.nid) FROM {node} n WHERE n.nid = %d AND ((n.title LIKE '%%%s%%') OR (n.body LIKE '%%%s%%'));
SELECT t.* FROM {term_data} t, {term_node} r WHERE t.tid = r.tid AND t.vid = %d AND r.nid = %d ORDER BY weight;
SELECT t.* FROM {term_data} t, {term_node} r WHERE r.tid = t.tid AND r.nid = %d ORDER BY weight, name;
SELECT t.*, tid1, tid2 FROM {term_relation}, {term_data} t WHERE (t.tid = tid1 OR t.tid = tid2) AND (tid1 = %d OR tid2 = %d) AND t.tid != %d ORDER BY weight, name;
SELECT t.* FROM {term_hierarchy} h, {term_data} t WHERE h.parent = t.tid AND h.tid = %d ORDER BY weight, name;
SELECT t.* FROM {term_hierarchy} h, {term_data} t WHERE t.vid = %d AND h.tid = t.tid AND h.parent = %d ORDER BY weight, name;
SELECT t.* FROM {term_hierarchy} h, {term_data} t WHERE h.tid = t.tid AND parent = %d ORDER BY weight;
SELECT t.*, parent FROM {term_data} t, {term_hierarchy} h WHERE t.tid = h.tid AND t.vid = %d ORDER BY weight, name;
SELECT name FROM {term_synonym} WHERE tid = %d;
SELECT * FROM {term_synonym} s, {term_data} t WHERE t.tid = s.tid AND s.name = '%s';
SELECT t.tid, COUNT(DISTINCT(n.nid)) AS c FROM {term_node} t INNER JOIN {node} n ON t.nid = n.nid '. node_access_join_sql() .' WHERE n.status = 1 AND '. node_access_where_sql() .' GROUP BY t.tid;
SELECT t.tid, COUNT(DISTINCT(n.nid)) AS c FROM {term_node} t, {node} n ". node_access_join_sql() ." WHERE t.nid = n.nid AND n.status = 1 AND n.type = '%s' AND ". node_access_where_sql() ." GROUP BY t.tid;
SELECT tid, parent FROM {term_hierarchy};
SELECT * FROM {vocabulary} WHERE LOWER('%s') LIKE LOWER(name);
SELECT * FROM {term_data} WHERE LOWER('%s') LIKE LOWER(name);
SELECT * FROM {vocabulary} WHERE vid = %d';
SELECT * FROM {term_data} WHERE tid = %d;
